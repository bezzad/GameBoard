{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        // "strictNullChecks": true,
        "target": "es5",
        "lib": ["es2015", "es2017", "dom"]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "wwwroot",
        "release",
        "bower_components"
    ]
}